## configurables

SESSION-NAME = Jinja
BASE-IMAGE = HOL

## targets

default: $(SESSION-NAME)
test: $(SESSION-NAME)-test
# usually empty:
images: $(SESSION-NAME) 

all: images


## global settings

SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

# turn image into absolute path according to ISABELLE_IMAGE_PATH or OUT
ifeq ($(ISABELLE_IMAGE_PATH),)
IMAGE=$(OUT)/$(BASE-IMAGE)
else
IMAGE=$(ISABELLE_IMAGE_PATH)$(BASE-IMAGE)
endif

DOCFLAGS = -v true -i true -V outline=/proof,/ML -g true -d pdf -P "http://isabelle.in.tum.de/library/"
USEDIR = $(ISABELLE_TOOL) usedir  $(DOCFLAGS)
BUILD = $(ISABELLE_TOOL) usedir -b $(DOCFLAGS)
BUILD_PART = $(ISABELLE_TOOL) usedir -b -v true -i false -g false -d false

# time limit (in sec)
MAXTIME = 5400


## dependencies


# test run and proof document

$(SESSION-NAME)-test: $(LOG)/$(BASE-IMAGE)-$(SESSION-NAME).gz

$(LOG)/$(BASE-IMAGE)-$(SESSION-NAME).gz: $(IMAGE) ROOT.ML \
  Common/*.thy J/*.thy JVM/*.thy DFA/*.thy BV/*.thy \
  Compiler/*.thy document/root.bib document/root.tex \
  document/introduction.tex
	cd ..; ulimit -t $(MAXTIME); $(USEDIR) $(IMAGE) $(SESSION-NAME)


# build image

Jinja: $(OUT)/Jinja

$(OUT)/Jinja: $(IMAGE) ROOT.ML \
	  Common/*.thy J/*.thy JVM/*.thy DFA/*.thy BV/*.thy \
	  Compiler/*.thy document/root.bib document/root.tex \
	  document/introduction.tex
		ulimit -t $(MAXTIME); $(BUILD) $(IMAGE) $(SESSION-NAME)


# build partial images

Jinja-ALL: $(OUT)/Jinja-ALL

$(OUT)/Jinja-ALL: $(OUT)/Jinja-BV ROOT-Comp.ML Compiler/*.thy
	ulimit -t $(MAXTIME); $(BUILD) -f ROOT-Comp.ML Jinja-BV Jinja

$(OUT)/Jinja-BV: $(OUT)/Jinja-J ROOT-BV.ML DFA/*.thy BV/*.thy 
	ulimit -t $(MAXTIME); $(BUILD) -f ROOT-BV.ML Jinja-J Jinja-BV

$(OUT)/Jinja-J: $(IMAGE) ROOT-J.ML Common/*.thy J/*.thy JVM/*.thy
	ulimit -t $(MAXTIME); $(BUILD) -f ROOT-J.ML $(IMAGE) Jinja-J


## clean

clean:
	@rm -f $(LOG)/$(BASE-IMAGE)-$(SESSION-NAME).gz
	@rm -f $(OUT)/$(SESSION-NAME)
